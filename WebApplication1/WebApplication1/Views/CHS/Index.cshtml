@model IEnumerable<WebApplication1.Table_1>

@{
    ViewBag.Title = "CHS";
}

<h2>CỬA HÀNG SÁCH</h2>

<p>
    @Html.ActionLink("Tạo mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Tên sách
        </th>
        <th>
            Giá
        </th>
        <th>
            Tác giả
        </th>
        <th>
            Số lượng
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenSach)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Giá)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TG)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SL)

            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.MaSach }) |
                @Html.ActionLink("Chi tiết", "Details", new { id = item.MaSach }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.MaSach })
            </td>
        </tr>
    }

</table>
