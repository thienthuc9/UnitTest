@model WebApplication1.Table_1

@{
    ViewBag.Title = "Edit";
}

<h2>Chỉnh Sửa</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Bảng 1</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.MaSach)

        <div class="form-group">
            @Html.LabelFor(model => model.TenSach, "Tên sách", new { @class = "control-label col-md-2" })
